//Difficulty: lower is better
//Difficulty: 7

class Kata {
  public static String getMiddle(String word) {
	    
		  char[] wort = word.toCharArray();
		  
	    if(word.toCharArray().length %2 == 0){
	    	
	    	String a = String.valueOf(wort[wort.length/2 -1]);
	    	String b = String.valueOf(wort[wort.length/2]);
	    

	      return a + b;

	  }
	  else{

		  String a = String.valueOf(wort[wort.length/2]);
	      return a;
	}
	}
	}
